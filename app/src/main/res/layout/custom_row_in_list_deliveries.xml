<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/delivery_id_text_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delivery_status_text_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_from__text_list"
        app:layout_constraintStart_toEndOf="@+id/delivery_id_text_list"
        app:layout_constraintTop_toTopOf="@+id/delivery_from__text_list" />

    <TextView
        android:id="@+id/delivery_from__text_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_to__text_list"
        app:layout_constraintStart_toEndOf="@+id/delivery_status_text_list"
        app:layout_constraintTop_toTopOf="@+id/delivery_to__text_list" />

    <TextView
        android:id="@+id/delivery_to__text_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_driver_text_list"
        app:layout_constraintStart_toEndOf="@+id/delivery_from__text_list"
        app:layout_constraintTop_toTopOf="@+id/delivery_driver_text_list" />

    <TextView
        android:id="@+id/delivery_driver_text_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delivery_to__text_list"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>