<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AddDriverActivity">


<EditText android:id="@+id/roleInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter new user's role"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="10dp"
    />

<EditText android:id="@+id/nameInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter new user's username"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/roleInput"
    android:layout_marginStart="10dp"/>

<EditText android:id="@+id/emailInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter new user's email"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/nameInput"
    android:layout_marginStart="10dp"/>

<EditText android:id="@+id/phoneInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter new user's phone number"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/emailInput"
    android:layout_marginStart="10dp"/>

<EditText android:id="@+id/passwordInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter new user's password"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/phoneInput"
    android:layout_marginStart="10dp"/>

<Button android:id="@+id/saveButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:layout_margin="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/passwordInput"
    />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/drivers_info_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/saveButton"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
